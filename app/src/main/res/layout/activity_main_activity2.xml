<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.squeezer.asr2application.Activity2">

    <!-- Name part-->
    <TextView
        android:id="@+id/name_label"
        android:layout_marginTop="@dimen/activity_2_vertical_margin"
        android:text="@string/name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/name_field"
        android:layout_toRightOf="@id/name_label"
        android:layout_alignBottom="@id/name_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Last Name part-->
    <TextView
        android:id="@+id/last_name_label"
        android:layout_below="@id/name_label"
        android:layout_marginTop="@dimen/activity_2_vertical_margin"
        android:text="@string/last_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/last_name_field"
        android:layout_toRightOf="@id/last_name_label"
        android:layout_alignBottom="@id/last_name_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Age part-->
    <TextView
        android:layout_below="@id/last_name_label"
        android:layout_marginTop="@dimen/activity_2_vertical_margin"
        android:id="@+id/age_label"
        android:text="@string/age_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/age_field"
        android:layout_toRightOf="@id/age_label"
        android:layout_alignBottom="@id/age_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Buttons part-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">


        <Button
            android:id="@+id/ok_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:text="@android:string/ok" />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="match_parent" android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@android:string/cancel" />
    </LinearLayout>

</RelativeLayout>
